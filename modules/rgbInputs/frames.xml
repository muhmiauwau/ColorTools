<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">

	<Frame name="ColorToolsRgbInput"  virtual="true">
		<Size x="50" y="30"/>
		<Layers>
			<Layer level="ARTWORK">
				<FontString parentKey="Label" justifyH="LEFT" justifyV="MIDDLE" inherits="GameFontNormal" setAllPoints="true">
					<Color r="1" g="1" b="1"/>
					<Anchors>
						<Anchor point="RIGHT" relativeKey="$parent" relativePoint="LEFT" x="-5" y="0"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<EditBox parentKey="box" inherits="InputBoxInstructionsTemplate" autoFocus="false" hidden="false" letters="3" numeric="true">
				<Size x="28" y="30"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="5" y="0"/>
				</Anchors>
				<Scripts>
					<OnEscapePressed>
						self:ClearFocus()
					</OnEscapePressed>
					<OnEditFocusGained>
						self:HighlightText(0, self:GetNumLetters())
					</OnEditFocusGained>
					<OnEditFocusLost>
						self:HighlightText(self:GetNumLetters())
					</OnEditFocusLost>
					<OnEnterPressed>
						self:ClearFocus() 
					</OnEnterPressed>
					<OnTextChanged>
						ColorTools:UpdateCPFRGB(self)
					</OnTextChanged>
				</Scripts>
			</EditBox>
		</Frames>
	</Frame>

</Ui>