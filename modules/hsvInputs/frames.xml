<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">

	<Script file="mixins.lua"/>





	<Frame name="ColorToolsHSVInputFrameTemplate" mixin="ColorToolsHSVInputMixin" virtual="true">
		<Size x="45" y="22"/>
		<Frames>
			<EditBox parentKey="box" inherits="InputBoxInstructionsTemplate" mixin="ColorToolsHSVInputEditboxMixin"  autoFocus="false" hidden="false" letters="3" numeric="true">	
				<Size x="45" y="22"/>
				<Anchors>
					<Anchor point="TOP" />
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString parentKey="Hash" inherits="GameFontNormalLarge" text="">
							<Anchors>
								<Anchor point="LEFT"/>
							</Anchors>
							<Color r="0.6" g="0.6" b="0.6" />
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnLoad method="OnLoad"/>
					<OnEscapePressed method="OnEscapePressed"/>
					<OnEditFocusGained method="OnEditFocusGained"/>
					<OnEditFocusLost method="OnEditFocusLost"/>
					<OnEnterPressed method="OnEnterPressed"/>
				</Scripts>
			</EditBox>
		</Frames>
	</Frame> 

</Ui>